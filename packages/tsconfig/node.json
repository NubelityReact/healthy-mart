{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node",
    "extends": "./base.json",
    "compilerOptions": {
      "target": "es6",
      "sourceMap": true,
      "resolveJsonModule": true,
      "outDir": "./dist",
      "noImplicitAny": true,
      "module": "commonjs",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }